{
  "name": "mikko-beer-backend",
  "author": "Mikko Gynther",
  "version": "0.0.0",
  "main": "index.js",
  "scripts": {
    "build": "rm -rf dist && tsc",
    "lint": "npx eslint --fix src",
    "start": "node dist/data/migrate-to-latest.js && node dist/index.js",
    "watch": "tsc -w",
    "test:files": "mocha --timeout 5000 -r ts-node/register",
    "test:core": "npm run test:files test/core/*.test.ts test/core/**/*.test.ts test/core/**/**/*.test.ts",
    "test:data": "npm run test:files test/data/*.test.ts test/data/**/*.test.ts",
    "test:web": "npm run test:files test/web/*.test.ts test/web/**/*.test.ts",
    "test": "npm run test:files test/**/*.test.ts test/**/**/*.test.ts test/**/**/**/*.test.ts",
    "test:watch": "mocha --timeout 5000 --require ts-node/register --watch --watch-files src, test/**/*.test.ts test/**/**/*.test.ts",
    "migrate:latest": "node dist/data/migrate-to-latest.js"
  },
  "dependencies": {
    "ajv": "8.17.1",
    "dotenv": "16.5.0",
    "jsonwebtoken": "9.0.2",
    "koa": "3.0.0",
    "koa-bodyparser": "4.4.1",
    "koa-compress": "5.1.1",
    "koa-json": "2.0.2",
    "koa-router": "13.0.1",
    "kysely": "0.28.2",
    "pg": "8.16.0",
    "uuid": "11.1.0"
  },
  "devDependencies": {
    "@types/jsonwebtoken": "9.0.9",
    "@types/koa": "2.15.0",
    "@types/koa__cors": "5.0.0",
    "@types/koa-bodyparser": "4.3.12",
    "@types/koa-compress": "4.0.6",
    "@types/koa-json": "2.0.23",
    "@types/koa-router": "7.4.8",
    "@types/mocha": "10.0.10",
    "@types/node": "22.15.30",
    "@types/pg": "8.15.4",
    "@types/uuid": "10.0.0",
    "@typescript-eslint/eslint-plugin": "8.33.1",
    "axios": "1.9.0",
    "earl": "1.3.0",
    "eslint": "9.28.0",
    "eslint-config-love": "120.0.0",
    "eslint-plugin-eslint-comments": "3.2.0",
    "eslint-plugin-import": "2.31.0",
    "eslint-plugin-n": "17.19.0",
    "eslint-plugin-promise": "7.2.1",
    "mocha": "11.5.0",
    "ts-node": "10.9.2",
    "typescript": "5.8.3"
  }
}
