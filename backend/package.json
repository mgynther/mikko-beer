{
  "name": "mikko-beer-backend",
  "author": "Mikko Gynther",
  "version": "0.0.0",
  "main": "index.js",
  "scripts": {
    "build": "rm -rf dist && tsc",
    "eslint": "npx eslint --fix src/**",
    "start": "node dist/data/migrate-to-latest.js && node dist/index.js",
    "watch": "tsc -w",
    "test:core": "mocha --timeout 5000 -r ts-node/register test/core/*.test.ts test/core/**/*.test.ts",
    "test:web": "mocha --timeout 5000 -r ts-node/register test/web/*.test.ts test/web/**/*.test.ts",
    "test": "mocha --timeout 5000 -r ts-node/register test/**/*.test.ts test/**/**/*.test.ts",
    "test:watch": "mocha --timeout 5000 --require ts-node/register --watch --watch-files src, test/**/*.test.ts test/**/**/*.test.ts",
    "migrate:latest": "node dist/data/migrate-to-latest.js"
  },
  "dependencies": {
    "@koa/cors": "^4.0.0",
    "ajv": "^8.12.0",
    "dotenv": "^16.3.1",
    "jsonwebtoken": "^9.0.2",
    "koa": "^2.14.2",
    "koa-bodyparser": "^4.4.1",
    "koa-compress": "^5.1.1",
    "koa-json": "^2.0.2",
    "koa-router": "^12.0.1",
    "kysely": "0.24.2",
    "pg": "^8.11.3",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/chai": "^4.3.11",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/koa": "^2.13.12",
    "@types/koa__cors": "^3.3.1",
    "@types/koa-bodyparser": "^4.3.12",
    "@types/koa-compress": "^4.0.6",
    "@types/koa-json": "^2.0.23",
    "@types/koa-router": "^7.4.8",
    "@types/mocha": "^10.0.6",
    "@types/node": "^16.18.68",
    "@types/pg": "^8.10.9",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "axios": "^1.6.2",
    "chai": "^4.3.10",
    "eslint": "^8.55.0",
    "eslint-config-standard-with-typescript": "^34.0.1",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-n": "^15.7.0",
    "eslint-plugin-promise": "^6.1.1",
    "mocha": "^10.2.0",
    "ts-node": "^10.9.2",
    "typescript": "^4.9.5"
  }
}
