{
  "name": "mikko-beer-backend",
  "author": "Mikko Gynther",
  "version": "0.0.0",
  "main": "index.js",
  "scripts": {
    "build": "rm -rf dist && tsc",
    "eslint": "npx eslint --fix src",
    "start": "node dist/data/migrate-to-latest.js && node dist/index.js",
    "watch": "tsc -w",
    "test:files": "mocha --timeout 5000 -r ts-node/register",
    "test:core": "npm run test:files test/core/*.test.ts test/core/**/*.test.ts",
    "test:data": "npm run test:files test/data/*.test.ts test/data/**/*.test.ts",
    "test:web": "npm run test:files test/web/*.test.ts test/web/**/*.test.ts",
    "test": "npm run test:files test/**/*.test.ts test/**/**/*.test.ts",
    "test:watch": "mocha --timeout 5000 --require ts-node/register --watch --watch-files src, test/**/*.test.ts test/**/**/*.test.ts",
    "migrate:latest": "node dist/data/migrate-to-latest.js"
  },
  "dependencies": {
    "@koa/cors": "5.0.0",
    "ajv": "8.12.0",
    "dotenv": "16.4.5",
    "jsonwebtoken": "9.0.2",
    "koa": "2.15.3",
    "koa-bodyparser": "4.4.1",
    "koa-compress": "5.1.1",
    "koa-json": "2.0.2",
    "koa-router": "12.0.1",
    "kysely": "0.27.3",
    "pg": "8.11.5",
    "uuid": "9.0.1"
  },
  "devDependencies": {
    "@types/chai": "4.3.14",
    "@types/jsonwebtoken": "9.0.6",
    "@types/koa": "2.15.0",
    "@types/koa__cors": "5.0.0",
    "@types/koa-bodyparser": "4.3.12",
    "@types/koa-compress": "4.0.6",
    "@types/koa-json": "2.0.23",
    "@types/koa-router": "7.4.8",
    "@types/mocha": "10.0.6",
    "@types/node": "20.12.7",
    "@types/pg": "8.11.5",
    "@types/uuid": "9.0.8",
    "@typescript-eslint/eslint-plugin": "7.7.0",
    "axios": "1.6.8",
    "chai": "4.3.10",
    "eslint": "8.56.0",
    "eslint-config-love": "47.0.0",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-n": "16.6.2",
    "eslint-plugin-promise": "6.1.1",
    "mocha": "10.4.0",
    "ts-node": "10.9.2",
    "typescript": "5.4.5"
  }
}
