{
  "name": "mikko-beer-backend",
  "author": "Mikko Gynther",
  "version": "0.0.0",
  "main": "index.js",
  "scripts": {
    "build": "rm -rf dist && tsc",
    "lint": "npx eslint --fix src",
    "start": "npm run migrate:latest && node --env-file .env dist/index.js",
    "test:files": "NODE_OPTIONS='--import ./register-esm.mjs' node --env-file .env-test --test -r ts-node/register --test-timeout 5000",
    "test:core": "npm run test:files -- --test-isolation=none --test-concurrency 1 test/core/*.test.ts test/core/**/*.test.ts test/core/**/**/*.test.ts",
    "test:data": "npm run test:files -- --test-isolation=none --test-concurrency 1 test/data/*.test.ts test/data/**/*.test.ts",
    "test:web": "npm run test:files -- --test-isolation=none --test-concurrency 1 test/web/*.test.ts test/web/**/*.test.ts",
    "test": "npm run test:files -- --test-isolation=none --test-concurrency 1 test/*.test.ts test/**/*.test.ts test/**/**/*.test.ts test/**/**/**/*.test.ts",
    "migrate:latest": "node --env-file .env dist/data/migrate-to-latest.js"
  },
  "dependencies": {
    "@koa/bodyparser": "6.0.0",
    "@koa/router": "15.1.1",
    "ajv": "8.17.1",
    "jsonwebtoken": "9.0.3",
    "koa": "3.1.1",
    "koa-compress": "5.1.1",
    "kysely": "0.28.9",
    "pg": "8.16.3",
    "uuid": "13.0.0"
  },
  "devDependencies": {
    "@types/jsonwebtoken": "9.0.10",
    "@types/koa": "3.0.1",
    "@types/koa-compress": "4.0.7",
    "@types/node": "25.0.3",
    "@types/pg": "8.16.0",
    "@typescript-eslint/eslint-plugin": "8.51.0",
    "axios": "1.13.2",
    "eslint": "9.39.2",
    "eslint-config-love": "140.0.0",
    "eslint-plugin-eslint-comments": "3.2.0",
    "eslint-plugin-import": "2.32.0",
    "eslint-plugin-n": "17.23.1",
    "eslint-plugin-promise": "7.2.1",
    "ts-node": "10.9.2",
    "typescript": "5.9.3"
  }
}
