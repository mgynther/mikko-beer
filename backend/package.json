{
  "name": "mikko-beer-backend",
  "author": "Mikko Gynther",
  "version": "0.0.0",
  "main": "index.js",
  "scripts": {
    "build": "rm -rf dist && tsc",
    "build:test": "rm -rf build-tests && tsc -p ./tsconfig-test.json",
    "lint": "npx eslint --fix src",
    "start": "npm run migrate:latest && node --env-file .env dist/index.js",
    "test:files": "npm run build:test && node --env-file .env-test --test --test-timeout 5000",
    "test:core": "npm run test:files -- --test-isolation=none --test-concurrency 1 build-tests/test/core/*.test.js build-tests/test/core/**/*.test.js build-tests/test/core/**/**/*.test.js",
    "test:data": "npm run test:files -- --test-isolation=none --test-concurrency 1 build-tests/test/data/*.test.js build-tests/test/data/**/*.test.js",
    "test:web": "npm run test:files -- --test-isolation=none --test-concurrency 1 build-tests/test/web/*.test.js build-tests/test/web/**/*.test.js",
    "test": "npm run test:files -- --test-isolation=none --test-concurrency 1 build-tests/test/*.test.js build-tests/test/**/*.test.js build-tests/test/**/**/*.test.js buid-tests/test/**/**/**/*.test.js",
    "migrate:latest": "node --env-file .env dist/data/migrate-to-latest.js"
  },
  "dependencies": {
    "@koa/bodyparser": "6.0.0",
    "@koa/router": "15.2.0",
    "ajv": "8.17.1",
    "jsonwebtoken": "9.0.3",
    "koa": "3.1.1",
    "koa-compress": "5.1.1",
    "kysely": "0.28.9",
    "pg": "8.17.1",
    "uuid": "13.0.0"
  },
  "devDependencies": {
    "@eslint-community/eslint-plugin-eslint-comments": "4.6.0",
    "@types/jsonwebtoken": "9.0.10",
    "@types/koa": "3.0.1",
    "@types/koa-compress": "4.0.7",
    "@types/node": "25.0.9",
    "@types/pg": "8.16.0",
    "@typescript-eslint/eslint-plugin": "8.53.0",
    "axios": "1.13.2",
    "eslint": "9.39.2",
    "eslint-config-love": "145.0.0",
    "eslint-plugin-import": "2.32.0",
    "eslint-plugin-n": "17.23.2",
    "eslint-plugin-promise": "7.2.1",
    "typescript": "5.9.3"
  }
}
