{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ESNext",
    "declaration": true,
    "outDir": "./build-tests",
    "strict": true,
    "noImplicitAny": true
  },
  "include": ["src/data/migrations/*", "test/**/*"],
  "watchOptions": {
    "watchFile": "useFsEvents",
    "watchDirectory": "useFsEvents",
    "fallbackPolling": "dynamicPriority",
    "synchronousWatchDirectory": true,
    "excludeDirectories": ["**/node_modules", "build-tests", "dist"],
    "excludeFiles": []
  }
}
